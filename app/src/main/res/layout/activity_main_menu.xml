<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backk"
    tools:context=".MainMenu">



    <ImageView
        android:id="@+id/locationIV"
        android:layout_width="51dp"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/font"
        android:layout_width="194dp"
        android:layout_height="128dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Your current risk :"
        android:textSize="44sp" />

    <TextView
        android:id="@+id/centreRiskTV"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="100%"
        android:textColor="#000000"
        android:textSize="60sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/historyIV"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:background="#ffffff"
            android:src="@drawable/ic_folder_shared_black_24dp" />

        <ImageView
            android:id="@+id/calculatorIV"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:background="#ffffff"
            android:src="@drawable/ic_calculator_black_24dp" />

        <ImageView
            android:id="@+id/quizIV"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:background="#ffffff"
            android:src="@drawable/ic_home_black_24dp" />

        <ImageView
            android:id="@+id/informationIV"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:background="#ffffff"
            android:src="@drawable/ic_info_outline_black_24dp" />

        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:background="#ffffff"
            android:src="@drawable/ic_mood_black_24dp" />

    </LinearLayout>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#ffffff" />


</LinearLayout>