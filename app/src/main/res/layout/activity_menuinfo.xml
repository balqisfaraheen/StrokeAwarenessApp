<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backk"
    tools:context=".menuinfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="206dp"
                    android:layout_height="83dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="40dp"
                    android:text="INFORMATION SEGMENT"
                    android:textSize="30dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="168dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="47dp"
                        android:layout_height="72dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/type" />

                    <TextView
                        android:id="@+id/textViewtype"
                        android:layout_width="82dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="5dp"
                        android:text="Types of Stroke"
                        android:textColor="#6F6F6F"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="75dp"
                        android:background="#ffffff"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/symptom" />

                    <TextView
                        android:id="@+id/textViewSymptom"
                        android:layout_width="63dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="12dp"
                        android:background="#ffffff"
                        android:text="Stroke Symptom"
                        android:textColor="#6F6F6F"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="168dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="159dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="47dp"
                        android:layout_height="72dp"
                        android:src="@drawable/treatment" />

                    <TextView
                        android:id="@+id/textViewTreatment"
                        android:layout_width="82dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/stroke_treatment"
                        android:textColor="#6F6F6F"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="75dp"
                        android:background="#ffffff"
                        android:contentDescription="TODO"
                        android:src="@drawable/fast" />

                    <TextView
                        android:id="@+id/textViewFAST"
                        android:layout_width="63dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="12dp"
                        android:background="#ffffff"
                        android:text="F.A.S.T"
                        android:textColor="#6F6F6F"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="168dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="164dp"
                    android:layout_height="168dp"
                    android:layout_marginStart="10dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="47dp"
                        android:layout_height="72dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/faq" />

                    <TextView
                        android:id="@+id/textViewFAQ"
                        android:layout_width="82dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="60dp"
                        android:text="@string/faq"
                        android:layout_marginEnd="40dp"
                        android:textColor="#6F6F6F"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="164dp"
                    android:layout_height="168dp"
                    android:layout_marginStart="10dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="47dp"
                        android:layout_height="72dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/youtube" />

                    <TextView
                        android:id="@+id/VideoTV"
                        android:layout_width="82dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="12dp"
                        android:text="Video"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="40dp"
                        android:textColor="#6F6F6F"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>